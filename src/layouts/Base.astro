---
import '../styles/global.css';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Matthew Yang" } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <!-- Google Analytics start-->
    {import.meta.env.PROD && import.meta.env.PUBLIC_GA_MEASUREMENT_ID && (
    <>
      <script async src={`https://www.googletagmanager.com/gtag/js?id=${import.meta.env.PUBLIC_GA_MEASUREMENT_ID}`}></script>
      <script is:inline define:vars={{ measurementId: import.meta.env.PUBLIC_GA_MEASUREMENT_ID }}>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', measurementId);
      </script>
    </>
    )}
    <!-- Google Analytics end-->
  </head>
  <body class="bg-[#1a0d1f] text-zinc-100 text-sm min-h-screen">
    <nav class="max-w-2xl mx-auto px-4 py-8">
      <ul class="flex gap-6 text-sm">
        <li><a href={`${import.meta.env.BASE_URL}/`} class="hover:text-zinc-400 transition-colors">about</a></li>
        <li><a href={`${import.meta.env.BASE_URL}/work`} class="hover:text-zinc-400 transition-colors">work</a></li>
        <li><a href={`${import.meta.env.BASE_URL}/writing`} class="hover:text-zinc-400 transition-colors">writing</a></li>
      </ul>
    </nav>
    <main class="max-w-2xl mx-auto px-4 pb-16">
      <slot />
    </main>
    <Footer />
  </body>
</html>